<h2> Artículo </h2>
<%= form_for [@project, @file, @article] do |f| %>
	<%= f.hidden_field :gg_file_id, :value => @file.id %>

	<div><%= f.label "Código del artículo: " %></div>
	<%= f.text_field(:code_article, :size => 30) %>
	
	<div><%= f.label "Nombre del proveedor: " %></div>
	<%= f.text_field(:name_provider, :size => 30) %>

	<div><%= f.label "Garantía: " %></div>
	<%= f.text_field(:guarantee, :size => 30) %>

	<div><%= f.label "ANS (Acuerdo de nivel de servicio): " %></div>
	<%= f.text_field(:ans, :size => 30) %>

	<fieldset>
		<legend> Contactos </legend>
		<% (0..2).each do |i| %>
			<%= f.fields_for :contacts, @contacts[i] do |j| %>
				<fieldset>
					<legend> Nivel <%= i+1 %></legend>
					<%= j.hidden_field :level, :value => i %>

					<div><%= j.label "Nivel: " %></div>
					<%= j.text_field(:level, :size => 30) %>

					<div><%= j.label "Nombre: " %></div>
					<%= j.text_field(:name, :size => 30) %>
					
					<div><%= j.label "Teléfono: " %></div>
					<%= j.text_field(:phone, :size => 30) %>

					<div><%= j.label "E-mail: " %></div>
					<%= j.text_field(:email, :size => 30) %>
				</fieldset>
			<% end %>
		<% end %>
	</fieldset>

	<div>
	<%= f.submit "Guardar", style: "float: left;" %>
	</div>
<% end %>